                        <!-- Cover Image -->
                        <div class="w-100 h-100 position-absolute">
                            <img src=@(string.IsNullOrEmpty(Model.CoverImagePicture) ? "/img/defaultCoverPicture.jpg" : $"/img/userPhotos/{Model.UserName}/{Model.CoverImagePicture}")
