@model List<FreelanceProject.Models.ViewModels.ApplicantViewModel>
@using FreelanceProject.Data.Entities

@{
    ViewData["Title"] = "Başvuran Kullanıcılar";
    var jobId = ViewBag.JobId;
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="fas fa-users me-2"></i> Başvuran Kullanıcılar</h3>
                <span class="badge bg-white text-primary">@Model.Count Başvuru</span>
            </div>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="empty-state text-center py-5">
                    <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Bu ilana henüz kimse başvurmadı</h5>
                    <p class="text-muted">İlanınızı paylaşmaya devam edin, başvurular zamanla gelecektir.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Durum</th>
                                <th>CV</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var applicant = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-3">
                                                <img src="@(string.IsNullOrEmpty(applicant.ProfilePicture) ? "/img/defaultProfilePhoto.jpg" : applicant.ProfilePicture)"
                                                     class="rounded-circle" width="40" height="40" alt="Profil Resmi" />
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@applicant.FullName</h6>
                                                <small class="text-muted">@applicant.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge
                                                @(applicant.Status == JobApplicationStatus.Accepted ? "bg-success" :
                                                applicant.Status == JobApplicationStatus.Rejected ? "bg-danger" :
                                                "bg-warning text-dark")">
                                                @applicant.Status.ToString()
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(applicant.CVPath))
                                        {
                                            <a href="/img/userPhotos/@applicant.UserName/@applicant.CVPath#toolbar=0&navpanes=0&scrollbar=0"
                                               target="_blank"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-file-pdf me-1"></i> CV'yi Gör
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Yok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (applicant.Status == JobApplicationStatus.Pending && !Model.Any(a => a.Status == JobApplicationStatus.Accepted))
                                        {
                                            <form asp-action="UpdateApplicationStatus" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@applicant.ApplicantId" />
                                                <input type="hidden" name="jobId" value="@jobId" />
                                                <input type="hidden" name="approve" value="true" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fas fa-check"></i> Onayla
                                                </button>
                                            </form>

                                            <form asp-action="UpdateApplicationStatus" method="post" class="d-inline">
                                                <input type="hidden" name="userId" value="@applicant.ApplicantId" />
                                                <input type="hidden" name="jobId" value="@jobId" />
                                                <input type="hidden" name="approve" value="false" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-times"></i> Reddet
                                                </button>
                                            </form>
                                        }
                                        else if (applicant.Status == JobApplicationStatus.Accepted)
                                        {
                                            <span class="text-muted">Başvuru onaylandı</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">İşlem yapılmış</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            }
        </div>
    </div>
</div>