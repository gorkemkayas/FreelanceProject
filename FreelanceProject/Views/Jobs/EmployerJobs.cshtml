@model List<FreelanceProject.Data.Entities.JobEntity>
@{
    ViewData["Title"] = "My Job Listings";
}

<style>
    .job-management-card {
        border-radius: 12px;
        overflow: hidden;
        border: none;
        box-shadow: 0 10px 30px rgba(67, 97, 238, 0.15);
        margin-bottom: 2rem;
    }

    .job-management-header {
        background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        padding: 1.5rem;
        color: white;
    }

        .job-management-header h2 {
            font-weight: 700;
            margin: 0;
            font-family: 'Manrope', sans-serif;
        }

    .job-management-body {
        padding: 2rem;
        background-color: #fff;
    }

    .job-item {
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .job-item:hover {
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.1);
        }

    .job-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #2b2d42;
        margin-bottom: 0.5rem;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .job-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 1rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        font-size: 0.9rem;
        color: #6c757d;
    }

        .meta-item i {
            margin-right: 0.5rem;
            color: #4361ee;
        }

    .job-status {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-completed {
        background-color: #f8d7da;
        color: #721c24;
    }

    .action-buttons {
        display: flex;
        gap: 0.75rem;
        margin-top: 1rem;
    }

    .btn {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn-edit {
        background-color: #4361ee;
        color: white;
        border: none;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            background-color: #3a0ca3;
            transform: translateY(-2px);
        }

    .btn-delete {
        background-color: #f87171;
        color: white;
        border: none;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #ef4444;
            transform: translateY(-2px);
        }

    .btn-view-applicants {
        background-color: white;
        color: #4361ee;
        border: 1px solid #4361ee;
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-view-applicants:hover {
            background-color: #f8f9fa;
        }

    .no-jobs {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }

    .no-jobs-icon {
        font-size: 3rem;
        color: #cbd5e0;
        margin-bottom: 1rem;
    }

    .create-new-btn {
        background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.25);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .create-new-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(67, 97, 238, 0.35);
        }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="job-management-card">
                <div class="job-management-header d-flex justify-content-between align-items-center">
                    <h2><i class="fas fa-briefcase me-2"></i> My Job Listings</h2>
                    <a asp-controller="Jobs" asp-action="Create" class="create-new-btn">
                        <i class="fas fa-plus"></i> Create New Job
                    </a>
                </div>
                <div class="job-management-body">
                    <!-- Job List -->
                    <div class="job-list">
                        @if (Model.Any())
                        {
                            foreach (var job in Model)
                            {
                                <div class="job-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h3 class="job-title">@job.JobTitle</h3>
                                            <div class="job-meta">
                                                <div class="meta-item">
                                                    <i class="fas fa-calendar-alt"></i>
                                                    <span>Start Date: @job.StartDate.ToString("MMMM dd, yyyy")</span>
                                                </div>
                                                <div class="meta-item">
                                                    <i class="fas fa-money-bill-wave"></i>
                                                    <span>Budget: ₺@job.JobBudget</span>
                                                </div>
                                                <div class="meta-item">
                                                    <i class="fas fa-calendar-check"></i>
                                                    <span>Duration: @job.JobDuration @job.DurationUnit</span>
                                                </div>
                                                <div class="meta-item">
                                                    <i class="fas fa-tags"></i>
                                                    <span>Category: @job.Category</span>
                                                </div>
                                            </div>
                                            <span class="job-status @(job.IsActive ? "status-active" : "status-pending")">
                                                <i class="fas fa-circle"></i> @(job.IsActive ? "Active" : "Under Review")
                                            </span>
                                        </div>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-view-applicants">
                                                <i class="fas fa-users"></i> View Applicants
                                            </a>
                                            <a asp-controller="Jobs" asp-action="Edit" asp-route-id="@job.Id" class="btn btn-edit">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-controller="Jobs" asp-action="Delete" asp-route-id="@job.Id" class="btn btn-delete">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-jobs">
                                <div class="no-jobs-icon">
                                    <i class="fas fa-briefcase"></i>
                                </div>
                                <h4>You haven't posted any jobs yet</h4>
                                <p class="mb-4">Start creating a job to connect with freelancers</p>
                                <a asp-controller="Jobs" asp-action="Create" class="create-new-btn">
                                    <i class="fas fa-plus"></i> Create New Job
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger"><i class="fas fa-exclamation-triangle me-2"></i>Delete Job</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this job? This action cannot be undone.</p>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="confirmDelete">
                    <label class="form-check-label" for="confirmDelete">
                        I understand this action cannot be undone
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn" disabled>
                    <i class="fas fa-trash-alt me-1"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Delete confirmation checkbox control
    document.getElementById('confirmDelete')?.addEventListener('change', function () {
        document.getElementById('confirmDeleteBtn').disabled = !this.checked;
    });

    // Trigger for delete button modal
    document.querySelectorAll('.btn-delete').forEach(button => {
        button.addEventListener('click', function (e) {
            if (!this.getAttribute('href')) {
                e.preventDefault();
                var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                deleteModal.show();

                document.getElementById('confirmDeleteBtn').onclick = function () {
                    // AJAX delete operation can be performed here
                    window.location.href = button.getAttribute('href');
                };
            }
        });
    });
</script>
