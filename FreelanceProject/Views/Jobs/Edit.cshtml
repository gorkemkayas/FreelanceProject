</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card form-card">
                <div class="form-header">
                    <h4><i class="fas fa-plus-circle me-2"></i> İŞ İLANI Güncelle</h4>
                </div>
                <div class="form-body">
                    <form asp-action="Edit" asp-controller="Jobs" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- 🔐 İşin ID'si (gizli alan) -->
                        <input type="hidden" asp-for="Id" />
                        <!-- Job Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label required-field"></label>
                            <input asp-for="Title" class="form-control" placeholder="Örnek: Profesyonel E-ticaret Sitesi Tasarımı" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Job Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label required-field"></label>
                            <textarea asp-for="Description" class="form-control" rows="6" placeholder="İşin detaylarını, beklentilerinizi ve gereksinimleri açıklayın..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Requirements -->
                        <div class="mb-4">
                            <label asp-for="Requirements" class="form-label required-field"></label>
                            <input asp-for="Requirements" class="form-control" placeholder="Örnek: Profesyonel E-ticaret Sitesi Tasarımı" />
                            <span asp-validation-for="Requirements" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Budget -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Budget" class="form-label required-field"></label>
                                <div class="input-group">
                                    <input asp-for="Budget" class="form-control" placeholder="5000" type="number" step="0.01" min="0" />
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="Budget" class="text-danger"></span>
                            </div>

                           

                        <!-- Start Date -->
                        <div class="mb-4">
                            <label asp-for="StartDate" class="form-label required-field"></label>
                                <input asp-for="StartDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <!-- Deadline -->
                            <div class="mb-4">
                                <label asp-for="Deadline" class="form-label required-field"></label>
                                <input asp-for="Deadline" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>
                      
                        <!-- Category -->
                        <div class="mb-4">
                            <label asp-for="Category" class="form-label required-field">Kategori</label>

                            @if (ViewBag.Categories is List<string> categories)
                            {
                                <select asp-for="Category" class="form-select">
                                    <option value="">Kategori Seçin</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category" selected="@(category == Model.Category)">
                                            @category
                                        </option>
                                    }
                                </select>
                            }
                            else
                            {
                                <p class="text-danger">Kategori listesi yüklenemedi.</p>
                            }

                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Mevcut resmi göster -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl?.ToString()))
                        {
                            <div class="mb-3">
                                <label>Mevcut Resim:</label><br />
                                <img src="@Model.ImageUrl.ToString()" alt="Yüklenen Resim" style="max-width: 200px;" />
                            </div>
                        }


                        <!-- Yeni resim yükleme -->
                        <div class="mb-3">
                            <label for="ImageFile" class="form-label">Yeni Resim Yükle (Opsiyonel)</label>
                            <input asp-for="ImageFile" class="form-control" type="file" />
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-premium py-3">
                                <i class="fas fa-paper-plane me-1"></i> İLANI YAYINLA
                            </button>
                            <button type="button" class="btn btn-cancel py-3 mt-2" onclick="window.history.back();">
                                <i class="fas fa-times me-1"></i> İPTAL
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


