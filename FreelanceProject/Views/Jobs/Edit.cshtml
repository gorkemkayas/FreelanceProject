    .btn-cancel {
        background: #f8f9fa;
        color: #343a40;
        border: 1px solid #e0e0e0;
        padding: 0.85rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.15);
        font-size: 1rem;
        text-transform: uppercase;
    }

        .btn-cancel:hover {
            background: #e0e0e0;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(67, 97, 238, 0.1);
        }

    .text-danger {
        color: var(--danger-color) !important;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card form-card">
                <div class="form-header">
                    <h4><i class="fas fa-plus-circle me-2"></i> EDIT JOB POST</h4>
                </div>
                <div class="form-body">
                    <form asp-action="Edit" asp-controller="Jobs" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Gizli ID -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Job Title -->
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label required-field"></label>
                            <input asp-for="Title" class="form-control" placeholder="Ex:Professional E-commerce Website Design" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Job Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label required-field"></label>
                            <textarea asp-for="Description" class="form-control" rows="6" placeholder="Describe the job details, your expectations, and the requirements..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Requirements -->
                        <div class="mb-4">
                            <label asp-for="Requirements" class="form-label required-field"></label>
                            <input asp-for="Requirements" class="form-control" placeholder="Being mobile-friendly, fast-loading, etc." />
                            <span asp-validation-for="Requirements" class="text-danger"></span>
                        </div>

                        <div class="row g-3">
                            <!-- Budget -->
                            <div class="col-md-6">
                                <label asp-for="Budget" class="form-label required-field"></label>
                                <div class="input-group">
                                    <input asp-for="Budget" class="form-control" placeholder="5000" type="number" step="0.01" min="0" oninput="this.value = this.value.replace(/[^0-9.]/g, '')" />
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="Budget" class="text-danger"></span>
                            </div>

                            <!-- Category -->
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label required-field">Kategori</label>
                                @if (ViewBag.Categories is List<string> categories)
                                {
                                    <select asp-for="Category" class="form-select">
                                        <option value="">Select Category</option>
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category" selected="@(category == Model.Category)">
                                                @category
                                            </option>
                                        }
                                    </select>
                                }
                                else
                                {
                                    <p class="text-danger">Failed to load category list.</p>
                                }
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <!-- Start Date -->
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label required-field"></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <!-- Deadline -->
                            <div class="col-md-6">
                                <label asp-for="Deadline" class="form-label required-field"></label>
                                <input asp-for="Deadline" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="Deadline" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Görsel Bölümü -->
                        <div class="row g-3 mt-4">
                            <!-- Mevcut Resim -->
                            @if (!string.IsNullOrEmpty(Model.ImageUrl?.ToString()))
                            {
                                <div class="col-md-6">
                                    <label class="form-label">Mevcut Resim:</label><br />
                                    <img src="@Model.ImageUrl" alt="Current Image" class="img-fluid rounded" style="max-height: 250px;" />
                                </div>
                            }

                            <!-- Yeni Resim -->
                            <div class="mb-4 mt-4">
                                <label for="ImageFile" class="form-label">Upload New Image (Optional)</label>
                                <input type="file" asp-for="ImageFile" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-grid gap-3 mt-5">
                            <button type="submit" class="btn btn-premium py-3">
                                <i class="fas fa-paper-plane me-1"></i> UPDATE JOB POST
                            </button>
                            <button type="button" class="btn btn-cancel py-3" onclick="window.history.back();">
                                <i class="fas fa-times me-1"></i> CANCEL
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const budgetInput = document.querySelector('input[name="Budget"]');
        if (budgetInput) {
            budgetInput.addEventListener('input', (e) => {
                e.target.value = e.target.value.replace(/[^0-9.]/g, '');
            });
        }
    });
</script>
