@{
    ViewData["Title"] = "İş İlanını Düzenle";
}

<style>
    /* Ana stil tanımlarını koruyoruz */
    :root {
        --primary-color: #4361ee;
        --primary-light: #e6e9f9;
        --primary-gradient: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
        --hover-gradient: linear-gradient(135deg, #3a0ca3 0%, #4361ee 100%);
        --warning-color: #f39c12;
    }

    .form-card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
        box-shadow: 0 15px 40px rgba(67, 97, 238, 0.1);
    }

    .form-header {
        background: var(--primary-gradient);
        padding: 2rem 1.5rem;
        text-align: center;
        border-bottom: 2px solid #ddd;
    }

        .form-header h4 {
            font-weight: 700;
            letter-spacing: 0.5px;
            color: #fff;
        }

    .form-body {
        padding: 2.5rem;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .required-field {
        color: #e74c3c;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 0.85rem 1.25rem;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.2);
        }

    .input-group-text {
        background-color: var(--primary-light);
        color: var(--primary-color);
        border-radius: 10px;
        font-weight: 500;
    }

    .duration-unit-select {
        border-top-left-radius: 0 !important;
        border-bottom-left-radius: 0 !important;
        border-left: none !important;
        width: 120px;
    }

    .duration-input {
        border-top-right-radius: 0 !important;
        border-bottom-right-radius: 0 !important;
    }

    .skills-container {
        background-color: white;
        border-radius: 12px;
        padding: 1.25rem;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        margin-top: 1.5rem;
    }

    .form-check-input {
        width: 1.2em;
        height: 1.2em;
        margin-top: 0.15em;
        border: 2px solid #dee2e6;
    }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

    .form-check-label {
        font-weight: 500;
        color: #4a4a4a;
    }

    /* Düzenleme sayfasına özel stiller */
    .btn-save {
        background: var(--primary-gradient);
        color: white;
        border: none;
        padding: 0.85rem 2.5rem;
        border-radius: 50px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.25);
        font-size: 1.1rem;
        text-transform: uppercase;
    }

        .btn-save:hover {
            background: var(--hover-gradient);
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(67, 97, 238, 0.35);
        }

    .btn-cancel {
        background: white;
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
        padding: 0.85rem 2.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #f8f9fa;
            color: var(--primary-color);
        }

    .status-badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        text-transform: uppercase;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-completed {
        background-color: #f8d7da;
        color: #721c24;
    }

    .last-updated {
        font-size: 0.9rem;
        color: #f8d7da;
        margin-top: 0.5rem;
    }

    /* Mobile Adaptasyon */
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card form-card">
                <div class="form-header text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4><i class="fas fa-edit me-2"></i>İŞ İLANINI DÜZENLE</h4>
                        <span class="status-badge status-active">AKTİF</span>
                    </div>
                    <div class="text-start mt-2 last-updated">
                        <i class="fas fa-clock me-1"></i>Son güncelleme: @DateTime.Now.ToString("dd MMMM yyyy HH:mm")
                    </div>
                </div>
                <div class="form-body">
                    <form method="post">
                        <!-- Hidden Fields -->
                        <input type="hidden" id="JobId" name="JobId" value="12345">
                        <input type="hidden" id="OriginalStatus" name="OriginalStatus" value="Active">

                        <!-- Job Title -->
                        <div class="mb-4">
                            <label for="JobTitle" class="form-label required-field">İş Başlığı*</label>
                            <input type="text" class="form-control" id="JobTitle" name="JobTitle" value="Profesyonel E-ticaret Sitesi Tasarımı" required>
                        </div>

                        <!-- Job Description -->
                        <div class="mb-4">
                            <label for="JobDescription" class="form-label required-field">İş Açıklaması*</label>
                            <textarea class="form-control" id="JobDescription" name="JobDescription" rows="6" required>Mevcut e-ticaret sitemizin yeniden tasarımı ve kullanıcı deneyiminin iyileştirilmesi için profesyonel bir tasarımcı arıyoruz. Ana sayfa, ürün sayfaları ve ödeme sürecinin yeniden tasarlanması gerekmektedir.</textarea>
                        </div>

                        <div class="row">
                            <!-- Budget -->
                            <div class="col-md-6 mb-4">
                                <label for="JobBudget" class="form-label required-field">Bütçe (₺)*</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="JobBudget" name="JobBudget" value="7500" required>
                                    <span class="input-group-text">₺</span>
                                </div>
                            </div>

                            <!-- Duration -->
                            <div class="col-md-6 mb-4">
                                <label for="JobDuration" class="form-label required-field">Tahmini Süre*</label>
                                <div class="input-group">
                                    <input type="number" class="form-control duration-input" id="JobDuration" name="JobDuration" value="3" required>
                                    <select class="form-select duration-unit-select" id="DurationUnit" name="DurationUnit">
                                        <option value="Gün">Gün</option>
                                        <option value="Hafta" selected>Hafta</option>
                                        <option value="Ay">Ay</option>
                                        <option value="Proje Bazlı">Proje Bazlı</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label for="JobStatus" class="form-label required-field">İlan Durumu*</label>
                            <select class="form-select" id="JobStatus" name="JobStatus" required>
                                <option value="Active" selected>Aktif</option>
                                <option value="Pending">Beklemede</option>
                                <option value="Completed">Tamamlandı</option>
                                <option value="Cancelled">İptal Edildi</option>
                            </select>
                        </div>

                        <!-- Start Date -->
                        <div class="mb-4">
                            <label for="StartDate" class="form-label required-field">Başlangıç Tarihi*</label>
                            <input type="date" class="form-control" id="StartDate" name="StartDate" value="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")" required>
                        </div>

                        <!-- Skills -->
                        <div class="mb-4">
                            <label class="form-label required-field">Gerekli Beceriler*</label>
                            <div class="skills-container">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="skill1" name="Skills" value="HTML/CSS" checked>
                                            <label class="form-check-label" for="skill1">HTML/CSS</label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="skill2" name="Skills" value="JavaScript">
                                            <label class="form-check-label" for="skill2">JavaScript</label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="skill3" name="Skills" value="React">
                                            <label class="form-check-label" for="skill3">React</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="skill4" name="Skills" value="UI/UX Tasarım">
                                            <label class="form-check-label" for="skill4">UI/UX Tasarım</label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="skill5" name="Skills" value="Node.js">
                                            <label class="form-check-label" for="skill5">Node.js</label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" type="checkbox" id="skill6" name="Skills" value="Mobil Uygulama">
                                            <label class="form-check-label" for="skill6">Mobil Uygulama</label>
                                        </div>
                                    </div>
                                </div>
                                <small class="text-muted">En az bir beceri seçmelisiniz</small>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-5">
                            <button type="button" class="btn btn-cancel">
                                <i class="fas fa-times me-1"></i> İptal
                            </button>
                            <div>
                                <button type="button" class="btn btn-outline-danger me-2">
                                    <i class="fas fa-trash-alt"></i> Sil
                                </button>
                                <button type="submit" class="btn btn-save">
                                    <i class="fas fa-save me-2"></i> Kaydet
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelector('form').addEventListener('submit', function (event) {
        // Bütün beceri checkbox'larını seç
        const skills = document.querySelectorAll('input[name="Skills"]:checked');

        // Eğer hiçbir beceri seçilmediyse, formun gönderilmesini engelle
        if (skills.length === 0) {
            event.preventDefault();
            alert("En az bir beceri seçmelisiniz!");
        }
    });
</script>
