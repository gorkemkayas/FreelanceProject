@section Scripts {
    <script>
        window.onload = function () {
            var showModal = '@TempData["ErrorMessage"]' !== '';
            if (showModal) {
                var myModal = new bootstrap.Modal(document.getElementById('cvWarningModal'));
                myModal.show();
            }
        }
    </script>
    <script>
        window.onload = function () {
            var showModal = '@TempData["OwnJobError"]' !== '';
            if (showModal) {
                var myModal = new bootstrap.Modal(document.getElementById('cvWarningModal'));
                myModal.show();
            }
        }
    </script>
}