@using FreelanceProject.Data.Entities
@model FreelanceProject.Data.Entities.JobEntity

@{
    ViewData["Title"] = "Job Details";
}

<main class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <!-- Job Image -->
                    <div class="position-relative overflow-hidden" style="height: 400px;">
                        <img src="@Model.JobImage"
                             alt="Project Image"
                             class="w-100 h-100 object-fit-cover" />
                    </div>

                    <div class="card-body">
                        <!-- Title and Category -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h3 class="fw-bold mb-0">@Model.Title</h3>
                            <span class="badge bg-primary text-light">@Model.Category</span>
                        </div>

                        <!-- Description -->
                        <p class="text-muted mb-3">@Model.Description</p>

                        <!-- Project Info -->
                        <div class="row text-muted mb-4">
                            <div class="col-md-4">
                                <strong>Budget:</strong> $@Model.Budget
                            </div>
                            <div class="col-md-4">
                                <strong>Start Date:</strong> @Model.StartDate?.ToString("dd MMMM yyyy")
                            </div>
                            <div class="col-md-4">
                                <strong>Deadline:</strong> @Model.Deadline?.ToString("dd MMMM yyyy")
                            </div>
                        </div>

                        @* <!-- Skills (example) -->
                        <h5 class="fw-bold">Skills Required</h5>
                        <ul class="list-inline text-muted mb-4">
                        <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> HTML/CSS</li>
                        <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> JavaScript</li>
                        <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> .NET</li>
                        <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> React</li>
                        </ul> *@

                        @* <!-- Action Buttons -->
                        <div class="d-flex justify-content-start gap-3">
                            <a href="#" class="btn btn-primary px-4">
                                <i class="fas fa-rocket me-1"></i> Apply Now
                            </a>
                            <a href="#" class="btn btn-outline-primary px-4">
                                <i class="fas fa-envelope me-1"></i> Contact Client
                            </a>
                        </div> *@

                        @* <!-- Action Buttons -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form method="post" asp-controller="Jobs" asp-action="ApplyForJob" asp-route-jobId="@Model.Id">
                                <button type="submit" class="btn btn-primary">Başvur</button>
                            </form>
                        } *@

                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-action="ApplyForJob" asp-controller="Jobs" method="post" onsubmit="return checkCVBeforeApply('@User.Identity.Name');">
                                <input type="hidden" name="jobId" value="@Model.Id" />
                                <button type="submit" class="btn btn-success">Apply</button>
                            </form>
                        }

                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 30px;">
                    <!-- Overview Card -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Project Overview</h5>
                            <ul class="list-unstyled text-muted mb-0">
                                <li><i class="fas fa-calendar-alt me-2"></i><strong>Start:</strong>@Model.StartDate?.ToString("dd MMMM yyyy")</li>
                                <li><i class="fas fa-clock me-2"></i><strong>Deadline:</strong> @Model.Deadline?.ToString("dd MMMM yyyy")</li>
                                <li><i class="fas fa-money-bill-wave me-2"></i><strong>Budget:</strong> $@Model.Budget</li>
                                <li><i class="fas fa-tags me-2"></i><strong>Category:</strong> @Model.Category</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Similar Jobs -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Similar Jobs</h5>
                            <ul class="list-unstyled">
                                @foreach (var similar in ViewBag.SimilarJobs as List<FreelanceProject.Data.Entities.JobEntity>)
                                {
                                    <li class="mb-2">
                                        <a asp-action="Details" asp-controller="Jobs" asp-route-id="@similar.Id" class="text-decoration-none text-primary">
                                            <i class="fas fa-briefcase me-2"></i> @similar.Title
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Latest Jobs -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Latest Jobs</h5>
                            <ul class="list-unstyled">
                                @foreach (var recent in ViewBag.LastThreeJobs as List<FreelanceProject.Data.Entities.JobEntity>)
                                {
                                    <li class="mb-2">
                                        <a asp-action="Details" asp-controller="Jobs" asp-route-id="@recent.Id" class="text-decoration-none text-secondary">
                                            <i class="fas fa-clock me-2"></i> @recent.Title
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Back Button -->
                    <a asp-action="Index2" asp-controller="Home" class="btn btn-secondary mt-3 w-100">
                        ← Back to Listings
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="modal fade" id="cvWarningModal" tabindex="-1" aria-labelledby="cvWarningModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 overflow-hidden shadow-lg">
            <div class="modal-header text-white" style="background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%); border-bottom: none;">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <h5 class="modal-title mb-0" id="cvWarningModalLabel">Dikkat Gerekli</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body p-4">
                <div class="d-flex align-items-start">
                    <div class="flex-shrink-0 text-warning">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="fw-bold mb-3">CV Bilgisi Eksik</h6>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <a href="@Url.Action("Profile", "User", new { userName = User.Identity.Name })" class="btn btn-light rounded-pill px-4">
                    <i class="fas fa-user-edit me-2"></i> Profili Düzenle
                </a>
                <button type="button" class="btn btn-outline-light rounded-pill px-4" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i> Kapat
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Özel stil eklemeleri */
    #cvWarningModal .modal-content {
        border-radius: 12px;
        overflow: hidden;
    }

    #cvWarningModal .modal-header {
        padding: 1.25rem 1.5rem;
    }

    #cvWarningModal .modal-body {
        padding: 1.5rem;
        background-color: #f8f9fa;
    }

    #cvWarningModal .modal-footer {
        padding: 1rem 1.5rem;
        background-color: #f8f9fa;
    }

    #cvWarningModal .btn-light {
        background-color: white;
        border-color: #dee2e6;
        color: #4361ee;
        transition: all 0.3s ease;
    }

        #cvWarningModal .btn-light:hover {
            background-color: #f1f3ff;
            transform: translateY(-1px);
        }

    #cvWarningModal .btn-outline-light {
        border-color: #dee2e6;
        color: #495057;
        transition: all 0.3s ease;
    }

        #cvWarningModal .btn-outline-light:hover {
            background-color: white;
            color: #4361ee;
        }

    .rounded-pill {
        border-radius: 50px !important;
    }
</style>

@section Scripts {
    <script>
        window.onload = function () {
            var showModal = '@TempData["ErrorMessage"]' !== '';
            if (showModal) {
                var myModal = new bootstrap.Modal(document.getElementById('cvWarningModal'));
                myModal.show();
            }
        }
    </script>
}