@model FreelanceProject.Data.Entities.JobEntity

@{
    ViewData["Title"] = "Job Details";
}

<main class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <!-- Job Image -->
                    <div class="position-relative overflow-hidden" style="height: 400px;">
                        <img src="@Model.ImageUrl"
                             alt="Project Image"
                             class="w-100 h-100 object-fit-cover" />
                    </div>

                    <div class="card-body">
                        <!-- Title and Category -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h3 class="fw-bold mb-0">@Model.JobTitle</h3>
                            <span class="badge bg-primary text-light">@Model.Category</span>
                        </div>

                        <!-- Description -->
                        <p class="text-muted mb-3">@Model.JobDescription</p>

                        <!-- Project Info -->
                        <div class="row text-muted mb-4">
                            <div class="col-md-4">
                                <strong>Budget:</strong> $@Model.JobBudget
                            </div>
                            <div class="col-md-4">
                                <strong>Start Date:</strong> @Model.StartDate.ToShortDateString()
                            </div>
                            <div class="col-md-4">
                                <strong>Duration:</strong> @Model.DurationUnit
                            </div>
                        </div>

                        <!-- Skills (example) -->
                        <h5 class="fw-bold">Skills Required</h5>
                        <ul class="list-inline text-muted mb-4">
                            <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> HTML/CSS</li>
                            <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> JavaScript</li>
                            <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> .NET</li>
                            <li class="list-inline-item"><i class="fas fa-check text-success me-1"></i> React</li>
                        </ul>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-start gap-3">
                            <a href="#" class="btn btn-primary px-4">
                                <i class="fas fa-rocket me-1"></i> Apply Now
                            </a>
                            <a href="#" class="btn btn-outline-primary px-4">
                                <i class="fas fa-envelope me-1"></i> Contact Client
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 30px;">
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Project Overview</h5>
                            <ul class="list-unstyled text-muted mb-0">
                                <li><i class="fas fa-calendar-alt me-2"></i><strong>Start:</strong> @Model.StartDate.ToShortDateString()</li>
                                <li><i class="fas fa-clock me-2"></i><strong>Duration:</strong> @Model.DurationUnit</li>
                                <li><i class="fas fa-money-bill-wave me-2"></i><strong>Budget:</strong> $@Model.JobBudget</li>
                                <li><i class="fas fa-tags me-2"></i><strong>Category:</strong> @Model.Category</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Similar Projects -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Similar Projects</h5>
                            <ul class="list-unstyled">
                                <li><a href="#" class="text-decoration-none">Mobile App UI/UX Design</a></li>
                                <li><a href="#" class="text-decoration-none">React Admin Dashboard</a></li>
                                <li><a href="#" class="text-decoration-none">E-commerce Site Revamp</a></li>
                            </ul>
                        </div>
                    </div>

                    <!-- Back Button -->
                    <a href="@Url.Action("Index2", "Jobs")" class="btn btn-secondary mt-3 w-100">
                        ← Back to Listings
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>
