﻿@if (string.IsNullOrEmpty(Model.Github) &&
string.IsNullOrEmpty(Model.Linkedin) &&
string.IsNullOrEmpty(Model.Medium) &&
string.IsNullOrEmpty(Model.X) &&
string.IsNullOrEmpty(Model.Youtube) &&
string.IsNullOrEmpty(Model.PersonalWeb))
{
    <p class="mb-0">No social media information is available.</p>
}
else
{



    @if (!string.IsNullOrEmpty(Model.Github))
    {
        <a class="fa-brands fs-4 text-hover-gradient text-decoration-none fa-github me-1" href="@Model.Github" target="_blank"></a>
    }
    @if (!string.IsNullOrEmpty(Model.Linkedin))
    {
        <a class="fa-brands fs-4 text-hover-gradient text-decoration-none fa-linkedin-in me-1" href="@Model.Linkedin" target="_blank"></a>
    }
    @if (!string.IsNullOrEmpty(Model.Medium))
    {
        <a class="fa-brands fs-4 text-hover-gradient text-decoration-none fa-medium me-1" href="@Model.Medium" target="_blank"></a>
    }
    @if (!string.IsNullOrEmpty(Model.X))
    {
        <a class=" fs-4 text-hover-gradient text-decoration-none bi bi-twitter-x me-1" href="@Model.X" target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
                <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z" />
            </svg>
        </a>
    }
    @if (!string.IsNullOrEmpty(Model.Youtube))
    {
        <a class="fa-brands fs-4 text-hover-gradient text-decoration-none fa-youtube me-1" href="@Model.Youtube" target="_blank"></a>
    }
    @if (!string.IsNullOrEmpty(Model.PersonalWeb))
    {
        <a class="fa-solid fs-4 text-hover-gradient text-decoration-none fa-earth-europe me-1" href="@Model.PersonalWeb" target="_blank"></a>
    }

}