@model UserProfileAndUserName
<div class="d-flex justify-content-start align-items-center">
    @if (Model != null)
    {
        <img class="rounded-pill" src="@Model.UserPhotoLink" alt="Profile Picture" width="30" height="30">
    }
    else
    {
        <p>Not Edited</p>
    }
