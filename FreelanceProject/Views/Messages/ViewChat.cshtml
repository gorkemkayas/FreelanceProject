 @model FreelanceProject.Models.ViewModels.ChatViewModel

<h2>Chat with @Model.Messages.FirstOrDefault()?.Receiver?.UserName ?? "User"</h2>

<div class="messages-list">
    @foreach (var message in Model.Messages)
    {
        var isMine = message.SenderId == Model.OwnerId;

        <div class="message @(isMine ? "text-end" : "text-start")">
            <strong>@message.Sender.UserName:</strong>
            <p>@message.Content</p>
            <small>@message.SentDate.ToString("g")</small>
        </div>
    }
</div> 

<!-- Yeni Mesaj Gönderme -->
 <form asp-action="SendMessage" asp-controller="Messages" method="post">
    <input type="hidden" name="JobId" value="@Model.Job.Id" />
    <input type="hidden" name="ReceiverId" value="@Model.ReceiverId" />
    <input type="hidden" name="SenderId" value="@Model.OwnerId" />

    <textarea name="newMessageContent" rows="3" placeholder="Mesajınızı yazın..." required></textarea>
    <button type="submit" class="btn btn-primary mt-2">Gönder</button>
</form>
  